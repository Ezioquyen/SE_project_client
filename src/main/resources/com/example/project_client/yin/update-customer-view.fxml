<AnchorPane prefHeight="576.0" prefWidth="608.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_client.view.controller.yin.UpdateCustomerView">
    <children>
        <HBox alignment="CENTER" layoutX="40.0" layoutY="21.0" prefHeight="81.0" prefWidth="439.0">
