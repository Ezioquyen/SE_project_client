                <Label prefHeight="66.0" prefWidth="341.0" text="Thông tin khách hàng">
                    <font>
                        <Font size="29.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <VBox layoutX="69.0" layoutY="177.0" prefHeight="227.0" prefWidth="439.0">
            <children>
                <HBox alignment="CENTER" prefHeight="73.0" prefWidth="439.0">
                    <children>
                        <Label prefHeight="44.0" prefWidth="215.0" text="Số điện thoại: ">
                            <font>
                                <Font size="26.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                  <Label fx:id="phoneNumField" prefHeight="32.0" prefWidth="239.0" text="Label">
