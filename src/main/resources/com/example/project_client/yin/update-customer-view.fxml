                        <Insets right="40.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="resetCustomerBtn" mnemonicParsing="false" onAction="#reset" prefHeight="40.0" prefWidth="216.0" text="Clear" />
            </children>
        </HBox>
        <Button fx:id="cancelBtn" layoutX="519.0" layoutY="22.0" mnemonicParsing="false" onAction="#cancel" prefHeight="51.0" prefWidth="58.0" text="X">
